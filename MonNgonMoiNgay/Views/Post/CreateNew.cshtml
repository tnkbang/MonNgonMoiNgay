@{
    ViewData["Title"] = "Thêm mới bài đăng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row post-meta">
        <div class="col-12"><br /></div>
        <div class="col-lg-5 col-md-12 col-sm-12">
            <div class="file-drop-area">
                <span class="fake-btn">Kéo thả hoặc chọn ảnh</span>
                <input class="file-input" id="pstImg" type="file" multiple accept=".jpg, .png" />
            </div>
            <div class="preview-images"></div>
            <button type="button" class="btn btn-outline-danger btn-remove">Xóa hết ảnh</button>
        </div>
        <div class="col-lg-7 col-md-12 col-sm-12">
            <form>
                <label class="form-group has-float-label">
                    <select id="pstLoai" class="form-control custom-select">
                        <option selected>Chọn loại món</option>
                        <option>Loại 1</option>
                        <option>Loại 2</option>
                    </select>
                    <span>Loại món</span>
                </label>
                <div class="form-group has-float-label">
                    <input class="form-control" id="pstTenMon" type="text" placeholder="Nhập tên món ăn..." />
                    <label for="pstTenMon">Tên món</label>
                </div>
                <div class="form-group has-float-label">
                    <textarea class="form-control" id="pstMoTa" rows="8" placeholder="Nhập mô tả món ăn...."></textarea>
                    <label for="pstMoTa">Mô tả</label>
                </div>
                <div class="form-inline">
                    <label class="form-group has-float-label" style="margin-right: 10px">
                        <select id="pstTP" class="form-control custom-select">
                            <option selected>Chọn Tỉnh/Thành Phố</option>
                            <option>Loại 1</option>
                            <option>Loại 2</option>
                        </select>
                        <span>Tỉnh/Thành Phố</span>
                    </label>
                    <label class="form-group has-float-label" style="margin-right: 10px">
                        <select id="pstQH" class="form-control custom-select">
                            <option selected>Chọn Quận/Huyện</option>
                            <option>Loại 1</option>
                            <option>Loại 2</option>
                        </select>
                        <span>Quận/Huyện</span>
                    </label>
                    <label class="form-group has-float-label">
                        <select id="pstXP" class="form-control custom-select">
                            <option selected>Chọn Xã/Phường</option>
                            <option>Loại 1</option>
                            <option>Loại 2</option>
                        </select>
                        <span>Xã/Phường</span>
                    </label>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>

