<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Ăn gì hôm nay?</h1>
                    <p>Nếu bạn chưa biết hôm nay ăn gì? Hãy xem những đề xuất của chúng tôi nhé !</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <button class="active" data-filter=".new-post">Bài đăng mới</button>
                        <button data-filter=".btv-vote">Bình chọn của BTV</button>
                        <button data-filter=".best-like">Yêu thích nhiều nhất</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row special-list">

            <!--Danh sách bài đăng mới-->
            @if (PostNew.Count != 0)
            {
                foreach (var post in PostNew)
                {
                    <div class="col-lg-3 col-md-6 special-grid new-post">
                        <div class="products-single fix">
                            <div class="box-img-hover">
                                <div class="type-lb">
                                    <p class="new">Mới</p>
                                </div>
                                <img src="@post.getOneImage()" class="img-fluid" alt="Image">
                                <div class="mask-icon">
                                    <ul>
                                        <li><a href="~/Post/Detail?id=@post.MaBd" data-toggle="tooltip" data-placement="right" title="Xem chi tiết"><i class="fas fa-eye"></i></a></li>
                                        <li>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                @if (post.isSave() || post.MaNd.Equals(User.Claims.ToList()[0].Value))
                                                {
                                                    <a href="#" data-toggle="tooltip" class="btn disabled" data-placement="right" title="Lưu lại"><i class="fa fa-bookmark" style="padding-left: 3px"></i></a>
                                                }
                                                else
                                                {
                                                    <a href="#" data-toggle="tooltip" class="btn" data-placement="right" onclick="setLuuBaiDang('@post.MaBd', this)" title="Lưu lại"><i class="fa fa-bookmark" style="padding-left: 3px"></i></a>
                                                }
                                            }
                                            else
                                            {
                                                <a href="~/Account/Login" data-toggle="tooltip" class="btn" data-placement="right" title="Lưu lại"><i class="fa fa-bookmark" style="padding-left: 3px"></i></a>
                                            }
                                        </li>
                                        <li><a href="#" data-toggle="tooltip" data-placement="right" title="Yêu thích"><i class="far fa-heart"></i></a></li>
                                    </ul>
                                    <a class="cart" href="#">Thêm vào giỏ hàng</a>
                                </div>
                            </div>
                            <div class="why-text">
                                <h4>@post.TenMon</h4>
                                <label>@post.MoTa</label>
                                <h5>@post.GiaTien VNĐ</h5>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center special-grid new-post">
